<Window x:Class="PaySys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaySys"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel FlowDirection="RightToLeft">
        <Menu Name="MnuMain" DockPanel.Dock="Top">
            <MenuItem Header="اطلاعات پایه">
                <MenuItem Header="تعریف عناوین کارکنان" Click="MenuItem_OnClick"> </MenuItem>
            </MenuItem>
        </Menu>
        <TabControl x:Name="TabCntMain">
            <TabItem Header="General">
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem Header="Security" />
            <TabItem Header="Details" />
        </TabControl>

    </DockPanel>

</Window>
