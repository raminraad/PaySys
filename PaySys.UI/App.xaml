<Application x:Class="PaySys.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PaySys"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:persianDateControls="clr-namespace:Arash.PersianDateControls;assembly=PersianDateControls"
             xmlns:bindingConverter="clr-namespace:PaySys.ModelAndBindLib.BindingConverter;assembly=PaySys.ModelAndBindLib"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:uc="clr-namespace:PaySys.UI.UC"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Licorice.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ControlTemplate x:Key="ValidatedTextBoxTemplate_Obsolete">
                <StackPanel Orientation="Horizontal">
                    <Border BorderThickness="2"
                            CornerRadius="5"
                            HorizontalAlignment="Stretch"
                            Width="{Binding ElementName=ErrorAdorner,Path=ActualWidth}"
                            BorderBrush="Red">
                        <AdornedElementPlaceholder Name="ErrorAdorner" />
                    </Border>
                    <Image Width="28"
                           Height="28"
                           Margin="10,0"
                           ToolTip="{Binding ElementName=ErrorAdorner, Path=AdornedElement.(Validation.Errors).CurrentItem.ErrorContent}"
                           Source="{StaticResource icon_notification_validation_error}" />
                </StackPanel>
            </ControlTemplate>
            <ControlTemplate x:Key="ValidatedTextBoxTemplate">
                <DockPanel LastChildFill="true">
                    <Border Background="Red" DockPanel.Dock="right" Margin="5,0,0,0" Width="20" Height="20" CornerRadius="10"
                            ToolTip="{Binding ElementName=customAdorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">
                        <TextBlock Text="!" VerticalAlignment="center" HorizontalAlignment="center" FontWeight="Bold" Foreground="white">
                        </TextBlock>
                    </Border>
                    <AdornedElementPlaceholder Name="customAdorner" VerticalAlignment="Center" >
                        <Border BorderBrush="red" BorderThickness="1" />
                    </AdornedElementPlaceholder>
                </DockPanel>
            </ControlTemplate>

            <bindingConverter:DateTimeToPersianDateConverter x:Key="GregToPersDateConverter" />
            <bindingConverter:NegateBooleanConverter x:Key="NegateBooleanConverter" />
            <bindingConverter:DisplayCodeOfExpenseArticleConverter x:Key="DisplayCodeOfExpenseArticleConverter" />
            <bindingConverter:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <bindingConverter:ColorPalletEnumToStringConverter x:Key="CnvColor" />
            <SolidColorBrush x:Key="FormStateColorAdd"
                             Color="DarkGreen" />
            <SolidColorBrush x:Key="FormStateColorEdit"
                             Color="Goldenrod" />
            <SolidColorBrush x:Key="FormStateColorSelect"
                             Color="DarkSlateGray" />
            <SolidColorBrush x:Key="FormStateColorDelete"
                             Color="Crimson" />
            <SolidColorBrush x:Key="FormStateColorUnknown"
                             Color="Black" />
            <FontFamily x:Key="FontFamilyOfDataFields">PFont</FontFamily>
            <system:Double x:Key="FontSizeOfDataFields">18</system:Double>
            <system:Double x:Key="FontSizeOfListTitle">20</system:Double>
            <system:Double x:Key="FontSizeOfLookupTextBox">24</system:Double>
            <system:Double x:Key="FontSizeOfToolbarButton">20</system:Double>
            <FontFamily x:Key="FontFamilyOfToolbarButton">Adobe Arabic</FontFamily>
            <system:Double x:Key="HeightOfDataField">33</system:Double>
            <system:Double x:Key="WidthOfDataFieldOfText">220</system:Double>
            <system:Double x:Key="WidthOfDataFieldOfCode">80</system:Double>
            <system:Double x:Key="WidthOfDataFieldOfPrice">120</system:Double>
            <system:Double x:Key="WidthOfDataFieldOfButton">40</system:Double>
            <system:Double x:Key="WidthOfDataColumnOfText">240</system:Double>
            <system:Double x:Key="WidthOfDataColumnOfCode">100</system:Double>
            <system:Double x:Key="WidthOfDataColumnOfPrice">140</system:Double>
            <system:Double x:Key="WidthOfDataColumnOfButton">60</system:Double>
            <system:Double x:Key="WidthOfDataColumnOfOperationsWithButtonCountOf1">60</system:Double>
            <system:Double x:Key="WidthOfTabOneOf4">350</system:Double>
            <system:Double x:Key="WidthOfTabOneOf5">300</system:Double>
            <system:Double x:Key="WidthOfTabOneOf6">250</system:Double>
            <system:Double x:Key="WidthOfTabOneOf7">200</system:Double>
            <system:Double x:Key="WidthOfTabOneOf8">150</system:Double>
            <system:Double x:Key="WidthOfTabOneOf9">100</system:Double>
            <system:Double x:Key="HeightOfLookupTextBox">34</system:Double>
            <system:Double x:Key="SizeOfToolbarButton">60</system:Double>
            <system:Double x:Key="HeightOfMenuItam">30</system:Double>
            <Thickness x:Key="MarginOfDataFields"
                       Left="10"
                       Top="10"
                       Right="40"
                       Bottom="10" />
            <Thickness x:Key="MarginOfMasterOrDetail"
                       Left="5"
                       Top="10"
                       Right="5"
                       Bottom="10" />
            <Thickness x:Key="MarginOfLookupTextBox"
                       Left="5"
                       Top="5"
                       Right="0"
                       Bottom="5" />

            <Style TargetType="ToolBar">
                <Setter Property="KeyboardNavigation.TabNavigation"
                        Value="Continue" />
            </Style>
            <Style TargetType="DataGrid">
                <Setter Property="HorizontalScrollBarVisibility"
                        Value="Auto" />
                <Setter Property="VerticalScrollBarVisibility"
                        Value="Auto" />
                <Setter Property="BorderThickness"
                        Value="2" />
                <Setter Property="Margin"
                        Value="{StaticResource MarginOfMasterOrDetail}" />
                <Setter Property="AutoGenerateColumns"
                        Value="False" />
                <Setter Property="ColumnWidth"
                        Value="*" />
                <Setter Property="IsSynchronizedWithCurrentItem"
                        Value="True" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="IsReadOnly"
                        Value="True" />
                <Setter Property="SelectionMode"
                        Value="Single" />
            </Style>
            <Style TargetType="TabItem">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style TargetType="MenuItem">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfMenuItam}" />
                <Setter Property="Foreground"
                        Value="#004529" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfToolbarButton}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfToolbarButton}" />
            </Style>
            <Style TargetType="GridViewColumnHeader">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
            </Style>
            <Style TargetType="uc:UcSuggesterTextBox">
                <Setter Property="VerticalAlignment"
                        Value="Top" />
                <Setter Property="HorizontalAlignment"
                        Value="Stretch" />
            </Style>
            <Style TargetType="ListView">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="Margin"
                        Value="10" />
                <Setter Property="SelectionMode"
                        Value="Single" />
                <Setter Property="KeyboardNavigation.TabNavigation"
                        Value="Continue" />
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ListViewItem">
                            <Setter Property="IsTabStop"
                                    Value="False" />
                            <EventSetter Event="GotFocus"
                                         Handler="ListItemGotFocus" />
                            <Setter Property="FontFamily"
                                    Value="{StaticResource FontFamilyOfDataFields}" />
                            <Setter Property="FontSize"
                                    Value="{StaticResource FontSizeOfDataFields}" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalAlignment"
                        Value="Stretch" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfListTitleTextBlock"
                   TargetType="TextBlock">
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Bottom" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfListTitle}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontWeight"
                        Value="Black" />
                <Setter Property="TextWrapping"
                        Value="Wrap" />
                <Setter Property="Margin"
                        Value="0,20" />
            </Style>
            <Style x:Key="StyleOfListTitleLabel"
                   TargetType="Label">
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Bottom" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfListTitle}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontWeight"
                        Value="Black" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfListViewItem"
                   TargetType="ListViewItem">
                <Setter Property="IsTabStop"
                        Value="False" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfDataFieldTextBox"
                   TargetType="TextBox">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="Width"
                        Value="{StaticResource WidthOfDataFieldOfText}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="Margin"
                        Value="{StaticResource MarginOfDataFields}" />
                <Setter Property="Validation.ErrorTemplate"
                        Value="{StaticResource ValidatedTextBoxTemplate}" />
                <Setter Property="MaxLength"
                        Value="10" />
                <EventSetter Event="GotFocus"
                             Handler="ListItemGotFocus" />
                <EventSetter Event="TextChanged"
                             Handler="TextBoxTextChanged" />
            </Style>
            <Style x:Key="StyleOfDataFieldMultiColumnTextBox"
                   TargetType="TextBox">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Top" />
                <Setter Property="VerticalAlignment"
                        Value="Stretch" />
                <Setter Property="TextWrapping"
                        Value="Wrap" />
                <Setter Property="Margin"
                        Value="{StaticResource MarginOfDataFields}" />
            </Style>
            <Style x:Key="StyleOfDataFieldComboBox"
                   TargetType="ComboBox">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="{StaticResource MarginOfDataFields}" />
            </Style>
            <Style x:Key="StyleOfDataFieldDatePicker"
                   TargetType="persianDateControls:PersianDatePicker">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Stretch" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="Margin"
                        Value="{StaticResource MarginOfDataFields}" />
            </Style>
            <Style x:Key="StyleOfDataFieldTimePicker"
                   TargetType="xctk:TimePicker">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="Format"
                        Value="Custom" />
                <Setter Property="FormatString"
                        Value="HH:mm" />
                <Setter Property="TimeInterval"
                        Value="00:15:00" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
            </Style>
            <Style x:Key="StyleOfDataFieldLabel"
                   TargetType="Label">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="Width"
                        Value="Auto" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalAlignment"
                        Value="Stretch" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfDataFieldTextBlock"
                   TargetType="TextBlock">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="Width"
                        Value="{StaticResource WidthOfDataFieldOfText}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfPassageTextBlock"
                   TargetType="TextBlock">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfDataField}" />
                <Setter Property="Width"
                        Value="Auto" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfToolbarButton"
                   TargetType="Button">
                <Setter Property="Margin"
                        Value="2,0" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfToolbarButton}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfToolbarButton}" />
                <Setter Property="FontStyle"
                        Value="Normal" />
                <Setter Property="Width"
                        Value="{StaticResource SizeOfToolbarButton}" />
                <Setter Property="Height"
                        Value="{StaticResource SizeOfToolbarButton}" />
            </Style>
            <Style x:Key="StyleOfToolbarButtonImage"
                   TargetType="Image">
                <Setter Property="Height"
                        Value="32" />
                <Setter Property="Width"
                        Value="32" />
                <Setter Property="FlowDirection"
                        Value="LeftToRight" />
            </Style>
            <Style x:Key="StyleOfTitleImage"
                   TargetType="Image">
                <Setter Property="Height"
                        Value="48" />
                <Setter Property="Width"
                        Value="48" />
                <Setter Property="FlowDirection"
                        Value="LeftToRight" />
            </Style>
            <Style x:Key="StyleOfLookupImage"
                   TargetType="Image"
                   BasedOn="{StaticResource StyleOfTitleImage}" />
            <Style x:Key="StyleOfToolbarButtonTextBlock"
                   TargetType="TextBlock">
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="StyleOfSelectionItemLabel"
                   TargetType="Label">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfLookupTextBox}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
            </Style>
            <Style x:Key="StyleOfLookupTextBox"
                   TargetType="TextBox">
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfLookupTextBox}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="Margin"
                        Value="{StaticResource MarginOfLookupTextBox}" />
            </Style>
            <Style x:Key="StyleOfSelectionItemComboBox"
                   TargetType="ComboBox">
                <Setter Property="Height"
                        Value="{StaticResource HeightOfLookupTextBox}" />
                <Setter Property="FontFamily"
                        Value="{StaticResource FontFamilyOfDataFields}" />
                <Setter Property="FontSize"
                        Value="{StaticResource FontSizeOfDataFields}" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="5" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>