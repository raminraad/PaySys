<Application x:Class="PaySys.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PaySys"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:persianDateControls="clr-namespace:Arash.PersianDateControls;assembly=PersianDateControls"
             xmlns:bindingConverter="clr-namespace:PaySys.ModelAndBindLib.BindingConverter;assembly=PaySys.ModelAndBindLib"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             StartupUri="MainWindow.xaml">
	<Application.Resources>
		<bindingConverter:DateTimeToPersianDateConverter x:Key="GregToPersDateConverter" />
		<bindingConverter:NegateBooleanConverter x:Key="NegateBooleanConverter" />

		<SolidColorBrush x:Key="FormStateColorAdd"
		                 Color="LawnGreen" />
		<SolidColorBrush x:Key="FormStateColorEdit"
		                 Color="Goldenrod" />
		<SolidColorBrush x:Key="FormStateColorSelect"
		                 Color="DarkSlateGray" />
		<SolidColorBrush x:Key="FormStateColorDelete"
		                 Color="Crimson" />
		<SolidColorBrush x:Key="FormStateColorUnknown"
		                 Color="Black" />
		<FontFamily x:Key="FontFamilyOfDataFields"> PFont </FontFamily>
		<system:Double x:Key="FontSizeOfDataFields"> 16 </system:Double>
		<system:Double x:Key="FontSizeOfListTitle"> 20 </system:Double>
		<system:Double x:Key="FontSizeOfSelectionItem"> 24 </system:Double>
		<system:Double x:Key="HeightOfDataFieldTextBox"> 30 </system:Double>
		<system:Double x:Key="HeightOfSelectionItem"> 34 </system:Double>
		<Thickness x:Key="MarginOfDataFields"
		           Left="0"
		           Top="0"
		           Right="60"
		           Bottom="0" />
		<Style TargetType ="TabItem">
			<Setter Property="FontFamily" Value="{StaticResource FontFamilyOfDataFields}"/>
			<Setter Property="FontSize" Value="{StaticResource FontSizeOfDataFields}"/>
		</Style>

		<Style TargetType="ComboBox">
			<Setter Property="Height"
			        Value="{StaticResource HeightOfDataFieldTextBox}" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
		</Style>
		<Style TargetType="MenuItem">
			<Setter Property="Height"
			        Value="30" />
			<Setter Property="Foreground"
					Value="#004529" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
		</Style>
		<Style TargetType="GridViewColumnHeader">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
		</Style>
		<Style TargetType="ListView">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
		</Style>
		<Style TargetType="Label">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalAlignment"
			        Value="Stretch" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
		</Style>

		<Style x:Key="StyleOfListTitle"
		       TargetType="TextBlock">
			<Setter Property="HorizontalAlignment"
			        Value="Center" />
			<Setter Property="VerticalAlignment"
			        Value="Bottom" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfListTitle}" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontWeight"
			        Value="Black" />
		</Style>
		<Style x:Key="StyleOfListViewItem"
		       TargetType="ListViewItem">
			<Setter Property="IsTabStop"
			        Value="False" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
		</Style>
		<Style x:Key="StyleOfDataFieldTextBox"
		       TargetType="TextBox">
			<Setter Property="Height"
			        Value="{StaticResource HeightOfDataFieldTextBox}" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
			<Setter Property="Margin"
			        Value="{StaticResource MarginOfDataFields}" />
		</Style>
		<Style x:Key="StyleOfDataFieldMultiColumnTextBox"
		       TargetType="TextBox">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Top" />
			<Setter Property="VerticalAlignment"
			        Value="Stretch" />
			<Setter Property="TextWrapping"
			        Value="Wrap" />
			<Setter Property="Margin"
			        Value="{StaticResource MarginOfDataFields}" />
		</Style>
		<Style x:Key="StyleOfDataFieldComboBox"
		       TargetType="ComboBox">
			<Setter Property="Height"
			        Value="{StaticResource HeightOfDataFieldTextBox}" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
			<Setter Property="Margin"
			        Value="{StaticResource MarginOfDataFields}" />
		</Style>
		<Style x:Key="StyleOfDataFieldDatePicker"
		       TargetType="persianDateControls:PersianDatePicker">
			<Setter Property="Height"
			        Value="{StaticResource HeightOfDataFieldTextBox}" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="14" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="VerticalAlignment"
			        Value="Stretch" />
			<Setter Property="HorizontalAlignment"
			        Value="Left" />
			<Setter Property="Margin"
			        Value="{StaticResource MarginOfDataFields}" />
		</Style>
		<Style x:Key="StyleOfDataFieldTimePicker"
		       TargetType="xctk:TimePicker">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="Format"
			        Value="Custom" />
			<Setter Property="FormatString"
			        Value="HH:mm" />
			<Setter Property="TimeInterval"
			        Value="00:15:00" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="HorizontalAlignment"
			        Value="Left" />
			<Setter Property="Height"
			        Value="{StaticResource HeightOfDataFieldTextBox}" />
			
		</Style>
		<Style x:Key="StyleOfDataFieldLabel"
		       TargetType="Label">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalAlignment"
			        Value="Stretch" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
		</Style>
		<Style x:Key="StyleOfDataFieldTextBlock"
		       TargetType="TextBlock">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
			<Setter Property="Height"
			        Value="{StaticResource HeightOfDataFieldTextBox}" />
		</Style>
		<Style x:Key="StyleOfToolbarButton"
		       TargetType="Button">
			<Setter Property="Margin"
			        Value="2,0" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
		</Style>
		<Style x:Key="StyleOfSelectionItemLabel"
		       TargetType="Label">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfSelectionItem}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="HorizontalContentAlignment"
			        Value="Left" />
		</Style>
		<Style x:Key="StyleOfSelectionItemTextBox"
		       TargetType="TextBox">
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfSelectionItem}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="HorizontalContentAlignment"
			        Value="Left" />
		</Style>
		<Style x:Key="StyleOfSelectionItemComboBox"
		       TargetType="ComboBox">
			<Setter Property="Height"
			        Value="{StaticResource HeightOfSelectionItem}" />
			<Setter Property="FontFamily"
			        Value="{StaticResource FontFamilyOfDataFields}" />
			<Setter Property="FontSize"
			        Value="{StaticResource FontSizeOfDataFields}" />
			<Setter Property="VerticalContentAlignment"
			        Value="Center" />
			<Setter Property="VerticalAlignment"
			        Value="Center" />
			<Setter Property="Margin"
			        Value="5" />
			<Setter Property="HorizontalContentAlignment"
			        Value="Center" />
		</Style>
	</Application.Resources>
</Application>