<UserControl x:Class="PaySys.UI.UserControls.UcTextImagePair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             mc:Ignorable="d"
             FlowDirection="RightToLeft" >
    <StackPanel Orientation="Horizontal" >
        <Image x:Name="Image"
               Source="{StaticResource icon_info}"
               Height="24"
               Width="24"
               Margin="5,0,0,0" />
        <TextBlock x:Name="Label"
                   Text="{x:Static fa:Labels.RelatedInfo}"
                   Margin="5,0"
                   Style="{StaticResource StyleOfToolbarButtonTextBlock}" />
    </StackPanel>
</UserControl>