<UserControl x:Name="SmpUcMissionFormulaMng"
             x:Class="PaySys.UI.UC.UcMissionFormulaMng"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PaySys.UI.UC"
             xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             d:DesignHeight="300"
             d:DesignWidth="900">
    <UserControl.Resources>
        <Style TargetType="TextBox"
               BasedOn="{StaticResource StyleOfDataFieldTextBox}">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>
    </UserControl.Resources>
    <Grid x:Name="GridMain"
          DataContext="{Binding ElementName=SmpUcMissionFormulaMng,Path=CurrentSubGroup.CurrenMissionFormula}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="45*" />
            <RowDefinition Height="46*" />
            <RowDefinition Height="45*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0"
                 Grid.ColumnSpan="4"
                 Margin="0,0,0,0.2">
            <Button Name="BtnEdit"
                    Content="{x:Static fa:Labels.Edit}"
                    Margin="2,0"
                    Click="BtnEdit_OnClick" />
            <Button Name="BtnCAddContractField"
                    Margin="2,0"
                    Content="{x:Static fa:Labels.AddContractField}"
                    Click="BtnAddMissionFormulaInvolvedContractField_OnClick" />
            <Button Name="BtnDeleteContractField"
                    Margin="2,0"
                    Content="{x:Static fa:Labels.DeleteContractField}"
                    Click="BtnDeleteMissionFormulaInvolvedContractField_OnClick" />
            <Button Name="BtnSave"
                    Margin="2,0"
                    Content="{x:Static fa:Labels.Save}"
                    Click="BtnSave_Click" />
            <Button Name="BtnCancel"
                    Margin="2,0"
                    Content="{x:Static fa:Labels.Cancel}"
                    Click="BtnCancel_Click" />
        </ToolBar>
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Text="{x:Static fa:Labels.MissionFormula}"
                   Style="{StaticResource StyleOfListTitleTextBlock}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="3"
                   Text="{x:Static fa:Labels.MissionFormulaInvolvedContractFields}"
                   Style="{StaticResource StyleOfListTitleTextBlock}" />
        <ListView Grid.Row="2"
                  Grid.Column="3"
                  Grid.RowSpan="5"
                  MaxWidth="400"
                  IsTabStop="True"
                  DisplayMemberPath="ContractField.Title"
                  x:Name="ListViewContractField"
                  ItemsSource="{Binding ElementName=SmpUcMissionFormulaMng,Path=CurrentSubGroup.CurrenMissionFormula.MissionFormulaInvolvedContractFields,UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="2"
                   Text="{x:Static fa:FieldicMissionFormula.SubtractFactor}"
                   Style="{StaticResource StyleOfPassageTextBlock}" />
        <TextBlock Grid.Row="3"
                   Text="{x:Static fa:FieldicMissionFormula.DivideFactor}"
                   Style="{StaticResource StyleOfPassageTextBlock}" />
        <TextBlock Grid.Row="4"
                   Text="{x:Static fa:FieldicMissionFormula.AddFactor}"
                   Style="{StaticResource StyleOfPassageTextBlock}" />
        <TextBlock Grid.Row="5"
                   Text="{x:Static fa:FieldicMissionFormula.MaxFactor}"
                   Style="{StaticResource StyleOfPassageTextBlock}" />
        <TextBlock Grid.Row="6"
                   Text="{x:Static fa:FieldicMissionFormula.PerKmFactor}"
                   Style="{StaticResource StyleOfPassageTextBlock}" />
        <TextBox x:Name="TextBoxSubtractFactor"
                 Grid.Row="2"
                 Grid.Column="1"
                 Text="{Binding SubtractFactor,UpdateSourceTrigger=Explicit}" />
        <TextBox x:Name="TextBoxDivideFactor"
                 Grid.Row="3"
                 Grid.Column="1"
                 Text="{Binding DivideFactor,UpdateSourceTrigger=Explicit}" />
        <TextBox x:Name="TextBoxAddFactor"
                 Grid.Row="4"
                 Grid.Column="1"
                 Text="{Binding AddFactor,UpdateSourceTrigger=Explicit}" />
        <TextBox x:Name="TextBoxMaxFactor"
                 Grid.Row="5"
                 Grid.Column="1"
                 Text="{Binding MaxFactor,UpdateSourceTrigger=Explicit}" />
        <TextBox x:Name="TextBoxPerKmFactor"
                 Grid.Row="6"
                 Grid.Column="1"
                 Text="{Binding PerKmFactor,UpdateSourceTrigger=Explicit}" />
    </Grid>
</UserControl>