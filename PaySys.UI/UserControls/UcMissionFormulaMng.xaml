<UserControl x:Name="SmpMissionFormulaMng"
			 x:Class="PaySys.UI.UC.UcMissionFormulaMng"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:PaySys.UI.UC"
			 xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
			 mc:Ignorable="d"
			 FlowDirection="RightToLeft"
			 d:DesignHeight="300"
			 d:DesignWidth="900">
	<Grid x:Name="GridMain"
		  DataContext="{Binding ElementName=SmpMissionFormulaMng,Path=CurrentSubGroup.CurrenMissionFormula}">
		<Grid.Resources>
			<Style x:Key="StyleTitle"
				   TargetType="TextBlock">
				<Setter Property="HorizontalAlignment"
						Value="Center" />
				<Setter Property="VerticalAlignment"
						Value="Center" />
				<Setter Property="FontSize"
						Value="16" />
			</Style>
			<Style TargetType="TextBox">
				<Setter Property="VerticalContentAlignment"
						Value="Center" />
				<Setter Property="Margin"
						Value="0,5" />
			</Style>
			<Style x:Key="StyleTextBlockFieldName"
				   TargetType="TextBlock">
				<Setter Property="Margin"
						Value="10,0" />
				<Setter Property="VerticalAlignment"
						Value="Center" />
			</Style>
		</Grid.Resources>
		<Grid.RowDefinitions>
			<RowDefinition x:Name="RowToolbar"
						   Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="3*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="3*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<ToolBar Grid.Row="0"
				 Grid.ColumnSpan="5"
				 Grid.Column="0">
			<Button Name="BtnEdit"
					Content="{x:Static fa:Labels.Edit}"
					Margin="2,0"
					Click="BtnEdit_OnClick" />
			<Button Name="BtnCAddContractField"
					Margin="2,0"
					Content="{x:Static fa:Labels.AddContractField}"
					Click="BtnAddMissionFormulaInvolvedContractField_OnClick" />
			<Button Name="BtnDeleteContractField"
					Margin="2,0"
					Content="{x:Static fa:Labels.DeleteContractField}"
					Click="BtnDeleteMissionFormulaInvolvedContractField_OnClick" />
			<Button Name="BtnSave"
					Margin="2,0"
					Content="{x:Static fa:Labels.Save}"
					Click="BtnSave_Click" />
			<Button Name="BtnCancel"
					Margin="2,0"
					Content="{x:Static fa:Labels.Cancel}"
					Click="BtnCancel_Click" />
		</ToolBar>
		<TextBlock Grid.Row="2"
				   Grid.Column="2"
				   Text="{x:Static fa:Labels.MissionFormula}"
				   Style="{StaticResource StyleTitle}" />
		<TextBlock Grid.Row="2"
				   Grid.Column="4"
				   Text="{x:Static fa:Labels.MissionFormulaInvolvedContractFields}"
				   Style="{StaticResource StyleTitle}" />
		<ListView Grid.Row="3"
				  Grid.Column="4"
				  Grid.RowSpan="5"
				  MaxWidth="300"
				  TabIndex="5"
				  IsTabStop="True"
				  DisplayMemberPath="SubGroupContractField.Title"
				  x:Name="ListViewContractField"
				  ItemsSource="{Binding ElementName=SmpMissionFormulaMng,Path=CurrentSubGroup.CurrenMissionFormula.MissionFormulaInvolvedContractFields,UpdateSourceTrigger=PropertyChanged}" />
		<TextBlock Grid.Row="3"
				   Grid.Column="1"
				   Text="{x:Static fa:FieldicMissionFormula.SubtractFactor}"
				   Style="{StaticResource StyleTextBlockFieldName}" />
		<TextBlock Grid.Row="4"
				   Grid.Column="1"
				   Text="{x:Static fa:FieldicMissionFormula.DivideFactor}"
				   Style="{StaticResource StyleTextBlockFieldName}" />
		<TextBlock Grid.Row="5"
				   Grid.Column="1"
				   Text="{x:Static fa:FieldicMissionFormula.AddFactor}"
				   Style="{StaticResource StyleTextBlockFieldName}" />
		<TextBlock Grid.Row="6"
				   Grid.Column="1"
				   Text="{x:Static fa:FieldicMissionFormula.MaxFactor}"
				   Style="{StaticResource StyleTextBlockFieldName}" />
		<TextBlock Grid.Row="7"
				   Grid.Column="1"
				   Text="{x:Static fa:FieldicMissionFormula.PerKmFactor}"
				   Style="{StaticResource StyleTextBlockFieldName}" />
		<TextBox x:Name="TextBoxSubtractFactor"
				 Grid.Row="3"
				 Grid.Column="2"
				 Text="{Binding SubtractFactor,UpdateSourceTrigger=Explicit}"
				 TabIndex="0"/>
		<TextBox x:Name="TextBoxDivideFactor"
				 Grid.Row="4"
				 Grid.Column="2"
				 TabIndex="1"
				 Text="{Binding DivideFactor,UpdateSourceTrigger=Explicit}" />
		<TextBox x:Name="TextBoxAddFactor"
				 Grid.Row="5"
				 Grid.Column="2"
				 TabIndex="2"
				 Text="{Binding AddFactor,UpdateSourceTrigger=Explicit}" />
		<TextBox x:Name="TextBoxMaxFactor"
				 Grid.Row="6"
				 Grid.Column="2"
				 TabIndex="3"
				 Text="{Binding MaxFactor,UpdateSourceTrigger=Explicit}" />
		<TextBox x:Name="TextBoxPerKmFactor"
				 Grid.Row="7"
				 Grid.Column="2"
				 TabIndex="4"
				 Text="{Binding PerKmFactor,UpdateSourceTrigger=Explicit}" />
	</Grid>
</UserControl>