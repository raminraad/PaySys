<UserControl x:Class="PaySys.UI.UC.UcFormStateLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             xmlns:resources1="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             FlowDirection="RightToLeft" >
    <StackPanel Orientation="Horizontal" >
        <Label Style="{StaticResource StyleOfStatusBarContentLabel}"
               Content="{x:Static fa:Labels.FormCurrentState}" >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0,0.5" MappingMode="RelativeToBoundingBox" StartPoint="1,0.5">
                    <GradientStop Color="#FF6699FF" Offset="1"/>
                    <GradientStop Color="#FF21304E"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Image x:Name="Icon"
               Source="{StaticResource icon_form_state_unknown}"
               Height="{StaticResource FontSizeOfStatusBarContentImage}"
               Width="{StaticResource FontSizeOfStatusBarContentImage}" />
    </StackPanel>
</UserControl>