<UserControl x:Class="PaySys.UI.UC.UcFormStateLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             xmlns:resources1="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             FlowDirection="RightToLeft" >
    <StackPanel Orientation="Horizontal" >
        <Label Style="{StaticResource StyleOfStatusBarContentLabel}"
Foreground="{StaticResource ColorOfFormStateContents}"
               Content="{x:Static fa:Labels.FormCurrentState}" />
        <Image x:Name="Icon"
               Source="{StaticResource icon_form_state_unknown}"
               Height="{StaticResource FontSizeOfStatusBarContentImage}"
               Width="{StaticResource FontSizeOfStatusBarContentImage}" />
    </StackPanel>
</UserControl>