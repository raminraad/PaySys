<UserControl x:Class="PaySys.UI.UC.UcFormStateLabel"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
			 xmlns:resources1="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
			 Height="30"
			 FlowDirection="RightToLeft">
	<StackPanel Orientation="Horizontal">
		<Label FontWeight="Bold"
			   Style="{StaticResource StyleOfDataFieldLabel}"
			   Content="{x:Static fa:Labels.FormCurrentState}"/>
		<Label Name="LblState"
			   Style="{StaticResource StyleOfDataFieldLabel}"
			   Content="---"
			   FontWeight="Bold" />
	</StackPanel>
</UserControl>