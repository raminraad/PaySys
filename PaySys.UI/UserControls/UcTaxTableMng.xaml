<UserControl x:Name="SmpUcTaxTableMng"
             x:Class="PaySys.UI.UC.UcTaxTableMng"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PaySys.UI.UC"
             xmlns:fa="clr-namespace:PaySys.Globalization.Fa;assembly=PaySys.Globalization"
             xmlns:bindingConverter="clr-namespace:PaySys.ModelAndBindLib.BindingConverter;assembly=PaySys.ModelAndBindLib"
             xmlns:model="clr-namespace:PaySys.ModelAndBindLib.Model;assembly=PaySys.ModelAndBindLib"
             mc:Ignorable="d"
             FlowDirection="RightToLeft"
             HorizontalAlignment="Center"
             d:DesignHeight="300"
             d:DesignWidth="550">
    <UserControl.Resources>
        <CollectionViewSource x:Key="CvsTaxRows"
                              Source="{Binding ElementName=SmpUcTaxTableMng,Path=CurrentSubGroup.CurrenTaxTable.TaxRows,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
        <bindingConverter:MathAddWithParameterConverter x:Key="CnvAdd" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource StyleOfListTitleTextBlock}"
                   Text="{x:Static fa:Labels.TaxValueCalculationTable}" />
        <ListView x:Name="ListViewTaxItem"
                  MaxWidth="500"
                  d:DataContext="{d:DesignInstance Type=model:TaxRow, IsDesignTimeCreatable=True}"
                  DataContext="{StaticResource CvsTaxRows}"
                  ItemsSource="{Binding}"
                  Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{x:Static fa:Labels.From}"
                                    Width="{StaticResource WidthOfDataColumnOfPrice}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Path=TempValueTo, RelativeSource={RelativeSource PreviousData},Converter={StaticResource CnvAdd},ConverterParameter=1,StringFormat={}{0:N0}}"
                                    Width="{StaticResource WidthOfDataFieldOfPrice}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="{x:Static fa:Labels.To}"
                                    Width="{StaticResource WidthOfDataColumnOfPrice}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=TempValueTo,UpdateSourceTrigger=LostFocus}"
                                         IsReadOnly="{Binding ElementName=SmpUcTaxTableMng,Path=ReadOnlyOfFields}"
                                         Width="{StaticResource WidthOfDataFieldOfPrice}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="{x:Static fa:Labels.Factor}"
                                    Width="{StaticResource WidthOfDataColumnOfPrice}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Factor,StringFormat={}{0:N0}}"
                                         IsReadOnly="{Binding ElementName=SmpUcTaxTableMng,Path=ReadOnlyOfFields}"
                                         Width="{StaticResource WidthOfDataFieldOfPrice}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>