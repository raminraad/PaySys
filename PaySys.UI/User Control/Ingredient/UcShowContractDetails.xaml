<UserControl x:Class="PaySys.UI.UC.UcShowContractDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaySys.UI.UC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
			 DataContextChanged="UcShowContractDetails_OnDataContextChanged">
    <Grid>
		<ListView Name="ListViewContractDetails" ItemsSource="{Binding}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Name="LblContractDetailTitle"
								   Text="{Binding GroupContractFieldTitle.ContractFieldTitle.Title}"/>
						<TextBox Name="TxtContractDetailValue" Text="{Binding Value}"/>
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</UserControl>
